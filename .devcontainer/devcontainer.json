{
  "name": "ArchCraftsman",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "postCreateCommand": "./.devcontainer/post-create.sh",
  "customizations": {
    "vscode": {
      "settings": {
        "workbench.colorTheme": "Default Dark Modern"
      },
      "extensions": [
        "ms-vscode.python",
        "ms-python.pylint",
        "ms-python.isort",
        "ms-python.flake8",
        "ms-python.black-formatter",
        "ms-python.vscode-pylance"
      ]
    }
  }
}
